doctype html
html(lang="ko")
    head
        title 
            #{pageTitle} | Metube
        link(rel ="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            if fakeUser.loggedIn
                small Hello #{fakeUser.username}
            nav
                ul
                    if fakeUser.loggedIn 
                        li 
                            a(href="/logout") Logout
                    else
                        li 
                            a(href="/login") LogIn
            h1=pageTitle
        main
            block content
    include partials/footer.pug